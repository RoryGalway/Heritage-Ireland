<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg42"
    android:orientation="vertical" >
    
     <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Rock Of Cashel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:src="@drawable/cap" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:text="It's huge, it's complex, it's iconic, there is nothing like it anywhere
else in the world and it's right here in Cashel at the heart of Tipperary. 
The Rock of Cashel (Carraig PhÃ¡draig), more formally St. Patrick's Rock, 
it is also known as Cashel of the Kings. 
" />
       <TableLayout
        android:id="@+id/ButtonsTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="0,1" >
       <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <Button
        android:id="@+id/add"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:gravity="center_horizontal"
        android:text="Add to favourites" />

    <Button android:id="@+id/directions" 
        android:layout_width="120dp" 
        android:layout_height="wrap_content" 
        android:background="@drawable/button" 
        android:gravity="center_horizontal" 
        android:text="Directions"/>
		
       </TableRow>
    </TableLayout>
       

</LinearLayout>
